@model TimeNotas.App.Models.HourPointConfigurationsModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<div>
    <h4>Configurations</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.WorkDays)
        </dt>
        <dd class="col-sm-10">
            @Model.GetCurrentWorkDaysDescription()
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OfficeHour)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OfficeHour)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LunchTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LunchTime)
        </dd>
    </dl>
