@model TimeNotas.App.Models.HourPointConfigurationsModel

@{
    ViewData["Title"] = "Configurations";
}

<div>
    <h4>@ViewData["Title"]</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.WorkDays)
        </dt>
        <dd class="col-sm-10">
            @Model.GetCurrentWorkDaysDescription()
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OfficeHour)
        </dt>
        <dd class="col-sm-10">
            @Model.OfficeHour.ToString(@"hh\:mm")
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LunchTime)
        </dt>
        <dd class="col-sm-10">
            @Model.LunchTime.ToString(@"hh\:mm")
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.StartWorkTime)
        </dt>
        <dd class="col-sm-10">
            @Model.StartWorkTime.ToString(@"hh\:mm")
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ToleranceTime)
        </dt>
        <dd class="col-sm-10">
            @Model.ToleranceTime.ToString(@"hh\:mm")
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }, new { @class = "btn btn-info" })    
</div>
