@model TimeNotas.App.Models.TimeEntryModel

@{
    ViewData["Title"] = "Hour point";
}

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>@ViewData["Title"]</h4>
    <hr />
    <dl class="row">       
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DateHourPointed)
        </dt>
        <dd class = "col-sm-10">
            @Model.DateHourPointed.ToString(@"hh\:mm")
        </dd>       
    </dl>
    
    <form asp-action="Delete">
        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.HourPointsId)
        @Html.HiddenFor(model => model.DateHourPointed)
        <input type="submit" value="Delete" class="btn btn-danger" /> 
        <a class="btn btn-info" asp-action="Index">Back to List</a>
    </form>
</div>
